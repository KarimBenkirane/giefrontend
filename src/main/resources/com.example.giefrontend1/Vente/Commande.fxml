<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.giefrontend1.Controllers.Vente.CommandeController">
    <StackPane layoutX="10.0" layoutY="10.0" prefHeight="700.0" prefWidth="850.0" styleClass="stack-pane"
               stylesheets="@../../Style/Commande.css">
        <TabPane prefHeight="700.0" prefWidth="859.0" tabClosingPolicy="UNAVAILABLE">
            <Tab text="Create Commande">
                <AnchorPane prefHeight="400.0" prefWidth="750.0" styleClass="anchor-pane">
                    <GridPane hgap="10" layoutX="24.0" layoutY="14.0" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints/>
                            <ColumnConstraints/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints/>
                            <RowConstraints/>
                            <RowConstraints/>
                            <RowConstraints/>
                            <RowConstraints/>
                        </rowConstraints>
                        <Text styleClass="title" text="Créer une Commande" GridPane.columnIndex="0"
                              GridPane.rowIndex="0"/>
                        <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <Label text="Client"/>
                            <ChoiceBox fx:id="ClientField" prefWidth="200.0"/>
                            <Label text="Produit"/>
                            <ChoiceBox fx:id="ProductField" prefWidth="200.0"/>
                            <Label text="Quantité"/>
                            <TextField fx:id="QuantityField" prefWidth="200.0"/>
                            <Label text="Date Commande"/>
                            <DatePicker fx:id="DateCoammndeFiel" prefWidth="200.0"/>
                            <Label text="Date Règlement"/>
                            <DatePicker fx:id="DateRegelemtField" prefWidth="200.0"/>
                            <Label text="État Commande"/>
                        </VBox>
                        <HBox GridPane.columnIndex="1" GridPane.rowIndex="3">
                            <Label text="État Commande"/>
                            <ChoiceBox fx:id="etatCommandeBox" prefWidth="200.0"/>
                        </HBox>

                        <HBox prefHeight="355.0" prefWidth="368.0" spacing="10"
                              GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <Button fx:id="getTotalPriceButton" prefHeight="44.0"
                                    prefWidth="106.0" text="Prix"/>
                            <TextField fx:id="ShowTotalPriceField" prefHeight="45.0"
                                       prefWidth="227.0" styleClass="total-price-field"/>
                        </HBox>
                        <HBox GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <Button fx:id="CreateCommandeButton" prefHeight="36.0"
                                    prefWidth="365.0" text="Confirmer Commande"/>
                        </HBox>
                        <Text styleClass="confirmation-message" GridPane.columnIndex="0"
                              GridPane.columnSpan="2" GridPane.rowIndex="3"/>
                        <Label fx:id="ConfirmationMsg" prefHeight="25.0" prefWidth="365.0"
                               styleClass="confirmation-message" GridPane.columnIndex="1"
                               GridPane.rowIndex="3"/>
                    </GridPane>
                </AnchorPane>
            </Tab>
            <Tab text="Autre Onglet"/>
        </TabPane>
    </StackPane>
</AnchorPane>
